<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.JellyfinAndroid" parent="android:Theme.Material.Light.NoActionBar" />
    
    <style name="Theme.JellyfinAndroid.VideoPlayer" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Material 3 aligned theme for MediaRouter (legacy View-based component) -->
    <style name="Theme.JellyfinAndroid.MediaRouteButton" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">#1C1B1F</item><!-- Material 3 surface color -->
        <item name="android:colorPrimaryDark">#1C1B1F</item>
        <item name="android:colorAccent">#E8DEF8</item><!-- Material 3 primary container -->
        <item name="android:colorBackground">#1C1B1F</item>
        <item name="android:textColorPrimary">#E6E1E5</item><!-- Material 3 on-surface -->
    </style>

    <!--
        Opaque theme for MediaRouteButton to prevent crashes when calculating contrast ratios.
        The AndroidX MediaRouter library requires an opaque background color to calculate
        proper contrast ratios. Using translucent/transparent backgrounds causes crashes.
    -->
    <style name="Theme_MediaRouter_Opaque" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorBackground">#1C1B1F</item><!-- Material 3 surface (opaque) -->
        <item name="android:colorPrimary">#D0BCFF</item><!-- Material 3 primary -->
        <item name="android:colorPrimaryDark">#1C1B1F</item>
        <item name="android:colorAccent">#E8DEF8</item><!-- Material 3 primary container -->
        <item name="android:windowBackground">#1C1B1F</item>
        <item name="android:textColorPrimary">#E6E1E5</item><!-- Material 3 on-surface -->
    </style>
</resources>
