<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Production configuration enforcing HTTPS only.
        Migration: cleartext allowances now live in app/src/debug/res/xml/network_security_config.xml
        so release builds remain locked to HTTPS by default.
    -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate store -->
            <certificates src="system"/>
            <!-- Trust user added certificate store -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Allow system and user certificate trust anchors in debug builds while keeping release HTTPS-only -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust system certificate store -->
            <certificates src="system"/>
            <!-- Trust user added certificate store for testing -->
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
    
    <!-- 
    For production Jellyfin servers with known certificates, add certificate pinning:
    
    <domain-config>
        <domain includeSubdomains="true">your-jellyfin-server.com</domain>
        <pin-set expiration="2026-01-01">
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
    </domain-config>
    -->
</network-security-config>
